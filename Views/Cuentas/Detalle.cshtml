@model ReporteTransaccionesDetalladas
@{
    ViewData["Title"] = "Movimientos Cuenta";
}

<h1>Movimientos @ViewBag.Nombre</h1>

<h4>
    <a asp-route-mes="@ViewBag.mesAnterior" asp-route-año="@ViewBag.añoAnterior"
       class="btn btn-secondary"><i class="bi bi-chevron-left"></i></a>
    @Model.FechaInicio.ToString("MMM")-@Model.FechaInicio.Year
    <a asp-route-mes="@ViewBag.mesPosterior" asp-route-año="@ViewBag.añoPosterior"
       class="btn btn-secondary"><i class="bi bi-chevron-right"></i></a>
</h4>

<div class="contenedor-totales mb-3">
    <div>
        <div>
            <strong>Depósitos</strong>
        </div>
        <div class="activo">
            @Model.BalanceDepositos.ToString("N");
        </div>
    </div>
    <div>
        <div>
            <strong>Retiros</strong>
        </div>
        <div class="pasivo">
            @Model.BalanceRetiros.ToString("N");
        </div>
    </div>
    <div>
        <div>
            <strong>Total</strong>
        </div>
        <div>
            @Model.Total.ToString("N");
        </div>
    </div>
</div>

@if (Model.TransaccionesAgrupadas.Count() == 0)
{
    <h5>No hay datos para mostrar</h5>
} else
{
    <table class="table">
        <tbody>
            @foreach (var transaccionesAgrupada in Model.TransaccionesAgrupadas)
            {
                <tr style="background-color: lightblue; font-size: 26px">
                    <td colspan="3">@transaccionesAgrupada.FechaTransaccion.Day
                            <span class="badge bg-secondary">@transaccionesAgrupada.FechaTransaccion.ToString("ddd")</span>
                    </td>
                    <td class="activo">@transaccionesAgrupada.BalanceDepositos.ToString("N")</td>
                    <td class="pasivo">@transaccionesAgrupada.BalanceRetiros.ToString("N")</td>
                </tr>
                @foreach (var transaccion in transaccionesAgrupada.Transacciones)
                {
                     <tr style="vertical-align: middle">
                         <td>
                             <a asp-controller="transacciones" asp-action="Editar" asp-route-id="@transaccion.Id"
                                asp-route-urlRetorno="@ViewBag.urlRetorno">
                                 <i class="bi-pencil"></i>
                             </a>
                         </td>
                        <td>@transaccion.Categoria</td>
                        <td>@transaccion.Cuenta</td>
                        <td class="activo">@(transaccion.TipoOperacionId == TipoOperacion.Ingreso ? transaccion.Monto.ToString("N") : null)</td>
                        <td class="pasivo">@(transaccion.TipoOperacionId == TipoOperacion.Gasto ? transaccion.Monto.ToString("N") : null)</td>
                     </tr>
                }
            }
        </tbody>
    </table>
}